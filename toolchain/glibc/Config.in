choice
	prompt "glibc version"
	depends on TOOLCHAINOPTS && USE_GLIBC
	default GLIBC_USE_VERSION_2_23
	help
	  Select the version of glibc you wish to use.

	config GLIBC_USE_VERSION_2_11
		bool "glibc 2.11"
		select GLIBC_VERSION_2_11

	config GLIBC_USE_VERSION_2_21
		bool "glibc 2.21"
		select GLIBC_VERSION_2_21

	config GLIBC_USE_VERSION_2_22
		bool "glibc 2.22"
		select GLIBC_VERSION_2_22

	config GLIBC_USE_VERSION_2_23
		bool "glibc 2.23"
		select GLIBC_VERSION_2_23

	config GLIBC_USE_VERSION_2_29
		bool "glibc 2.29"
		select GLIBC_VERSION_2_29

endchoice
